---
layout: layouts/base.njk
---
<article class="prose max-w-none">
  <header class="mb-10">
    <p class="text-[13px] mb-2" style="color: var(--color-text-secondary);">
      <time datetime="{{ date | dateIso }}">{{ date | dateReadable }}</time>
      {% if tags %}
        {% for tag in tags %}
          {% if tag != "posts" %}
            <span class="mx-1">Â·</span>
            <a href="/tags/{{ tag | slugify }}/" class="hover:underline" style="color: var(--color-text-secondary);">{{ tag }}</a>
          {% endif %}
        {% endfor %}
      {% endif %}
    </p>
    <h1 class="text-2xl font-semibold tracking-tight m-0" style="color: var(--color-text);">{{ title }}</h1>
  </header>
  
  {{ content | safe }}
</article>
