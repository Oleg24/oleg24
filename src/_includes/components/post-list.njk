{# Post listing component #}
<ul class="space-y-6">
  {% for post in posts %}
    <li class="border-b border-gray-200 dark:border-gray-700 pb-6 last:border-0">
      <a href="{{ post.url }}" class="block group">
        <h2 class="text-xl font-semibold group-hover:text-blue-600 dark:group-hover:text-blue-400 mb-1">
          {{ post.data.title }}
        </h2>
        <time datetime="{{ post.date | dateIso }}" class="text-sm text-gray-600 dark:text-gray-400">
          {{ post.date | dateReadable }}
        </time>
        {% if post.data.description %}
          <p class="mt-2 text-gray-600 dark:text-gray-400">{{ post.data.description }}</p>
        {% endif %}
      </a>
    </li>
  {% endfor %}
</ul>
