{# Post listing component #}
<ul class="space-y-1">
  {% for post in posts %}
    <li>
      <a href="{{ post.url }}" class="group flex items-baseline gap-4 py-2 -mx-2 px-2 rounded-md transition-colors duration-150" style="background: transparent;" onmouseover="this.style.background='var(--color-bg-hover)'" onmouseout="this.style.background='transparent'">
        <time datetime="{{ post.date | dateIso }}" class="text-[13px] shrink-0 tabular-nums" style="color: var(--color-text-secondary);">
          {{ post.date | dateReadable }}
        </time>
        <span class="text-[15px]" style="color: var(--color-text);">
          {{ post.data.title }}
        </span>
      </a>
    </li>
  {% endfor %}
</ul>
