{# Interactive bookshelf component - customize as needed #}
<div class="bookshelf" id="bookshelf">
  <div class="flex flex-wrap gap-4 justify-center">
    {% for book in books %}
      <div class="book-item cursor-pointer transform transition-transform hover:scale-105 hover:-translate-y-2"
           data-title="{{ book.title }}"
           data-author="{{ book.author }}"
           data-status="{{ book.status }}"
           data-notes="{{ book.notes }}">
        <div class="w-24 h-36 bg-gradient-to-br from-blue-500 to-purple-600 rounded shadow-lg flex items-end p-2">
          <span class="text-white text-xs font-medium leading-tight">{{ book.title }}</span>
        </div>
        <div class="mt-1 text-xs text-gray-600 dark:text-gray-400 text-center truncate w-24">
          {{ book.author }}
        </div>
      </div>
    {% endfor %}
  </div>
  
  {# Book detail modal #}
  <div id="book-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 max-w-md mx-4 shadow-xl">
      <h3 id="modal-title" class="text-xl font-bold mb-2"></h3>
      <p id="modal-author" class="text-gray-600 dark:text-gray-400 mb-4"></p>
      <p id="modal-notes" class="text-sm"></p>
      <button onclick="closeBookModal()" class="mt-4 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
        Close
      </button>
    </div>
  </div>
</div>
