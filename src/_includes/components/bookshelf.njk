{# Interactive bookshelf component - minimal design #}
<div class="bookshelf" id="bookshelf">
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">
    {% for book in books %}
      <div class="book-item cursor-pointer group"
           data-title="{{ book.title }}"
           data-author="{{ book.author }}"
           data-status="{{ book.status }}"
           data-notes="{{ book.notes }}">
        <div class="aspect-[2/3] rounded-sm overflow-hidden transition-transform duration-200 group-hover:-translate-y-1" style="background: var(--color-bg-hover); border: 1px solid var(--color-border);">
          {% if book.cover %}
            <img src="{{ book.cover }}" alt="{{ book.title }}" class="w-full h-full object-cover">
          {% else %}
            <div class="w-full h-full flex items-end p-3">
              <span class="text-[13px] font-medium leading-tight" style="color: var(--color-text);">{{ book.title }}</span>
            </div>
          {% endif %}
        </div>
        <div class="mt-2">
          <p class="text-[13px] font-medium truncate" style="color: var(--color-text);">{{ book.title }}</p>
          <p class="text-[12px] truncate" style="color: var(--color-text-secondary);">{{ book.author }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
  
  {# Book detail modal - minimal style #}
  <div id="book-modal" class="hidden fixed inset-0 flex items-center justify-center z-50" style="background: rgba(0,0,0,0.4); backdrop-filter: blur(4px);">
    <div class="rounded-lg p-6 max-w-sm mx-4 shadow-xl" style="background: var(--color-bg); border: 1px solid var(--color-border);">
      <h3 id="modal-title" class="text-[17px] font-semibold mb-1" style="color: var(--color-text);"></h3>
      <p id="modal-author" class="text-[14px] mb-4" style="color: var(--color-text-secondary);"></p>
      <p id="modal-notes" class="text-[14px] leading-relaxed" style="color: var(--color-text);"></p>
      <button onclick="closeBookModal()" class="mt-5 text-[13px] font-medium px-3 py-1.5 rounded transition-colors" style="color: var(--color-text-secondary); background: var(--color-bg-hover);">
        Close
      </button>
    </div>
  </div>
</div>
