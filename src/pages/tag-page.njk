---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - posts
permalink: /tags/{{ tag | slugify }}/
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ tag }} – {{ site.title }}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/assets/css/styles.css">
  <style>
    body { font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif; }
  </style>
</head>
<body class="min-h-screen" style="background: var(--color-bg); color: var(--color-text);">
  {% include "components/header.njk" %}
  
  <main class="max-w-2xl mx-auto px-5 py-12">
    <h1 class="text-xl font-semibold tracking-tight mb-6" style="color: var(--color-text);">{{ tag }}</h1>
    
    {% set posts = collections[tag] %}
    {% include "components/post-list.njk" %}
    
    <a href="/tags/" class="inline-block mt-8 text-[14px] nav-link">
      ← All tags
    </a>
  </main>

  {% include "components/footer.njk" %}
</body>
</html>
