---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - posts
permalink: /tags/{{ tag | slugify }}/
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Posts tagged "{{ tag }}" | {{ site.title }}</title>
  <link rel="stylesheet" href="/assets/css/styles.css">
</head>
<body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 min-h-screen">
  {% include "components/header.njk" %}
  
  <main class="max-w-3xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Posts tagged "{{ tag }}"</h1>
    
    {% set posts = collections[tag] %}
    {% include "components/post-list.njk" %}
    
    <a href="/tags/" class="inline-block mt-8 text-blue-600 dark:text-blue-400 hover:underline">
      ‚Üê All tags
    </a>
  </main>

  {% include "components/footer.njk" %}
</body>
</html>
