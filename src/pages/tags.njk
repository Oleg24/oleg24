---
title: Tags
layout: layouts/base.njk
permalink: /tags/
---

<h1 class="text-xl font-semibold tracking-tight mb-6" style="color: var(--color-text);">Tags</h1>

<div class="flex flex-wrap gap-2">
  {% for tag in collections | keys %}
    {% if tag != "all" and tag != "posts" %}
      <a href="/tags/{{ tag | slugify }}/" 
         class="text-[14px] px-3 py-1.5 rounded-md transition-colors duration-150"
         style="background: var(--color-bg-hover); color: var(--color-text);">
        {{ tag }}
        <span class="text-[12px] ml-1" style="color: var(--color-text-secondary);">({{ collections[tag].length }})</span>
      </a>
    {% endif %}
  {% endfor %}
</div>
