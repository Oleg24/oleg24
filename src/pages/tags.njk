---
title: Tags
layout: layouts/base.njk
permalink: /tags/
---

<h1 class="text-3xl font-bold mb-8">All Tags</h1>

<div class="flex flex-wrap gap-3">
  {% for tag in collections | keys %}
    {% if tag != "all" and tag != "posts" %}
      <a href="/tags/{{ tag | slugify }}/" 
         class="px-4 py-2 bg-gray-100 dark:bg-gray-800 rounded-full hover:bg-blue-100 dark:hover:bg-blue-900 transition-colors">
        #{{ tag }}
        <span class="text-gray-500 text-sm">({{ collections[tag].length }})</span>
      </a>
    {% endif %}
  {% endfor %}
</div>
